{
  "name": "todomvc-gaudi-backend",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "// --- build": "",
    "build": "npm run build:ts && npm run build:gaudi",
    "build:ts": "tsc --build --preserveWatchOutput --force",
    "build:gaudi": "npx gaudi build",
    "// --- dev": "",
    "dev": "concurrently --names ts,gaudi --prefix-colors magenta,blue \"npm run dev:ts\" \"npm run dev:gaudi\"",
    "dev:ts": "npm run build:ts -- --watch --incremental",
    "dev:gaudi": "npx gaudi dev",
    "// --- start": "",
    "start": "dotenv -e .env nodemon --watch dist dist/server.js",
    "// --- other": "",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "concurrently": "^7.6.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.37.0",
    "eslint-plugin-import": "^2.27.5",
    "rimraf": "^3.0.2",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "@gaudi/compiler": "0.0.3",
    "@gaudi/runtime": "0.0.3",
    "express": "^4.18.2",
    "gaudi": "0.0.3",
    "nodemon": "^3.0.1"
  }
}
