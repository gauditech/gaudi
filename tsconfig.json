{
  "compilerOptions": {
    "module": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["src/*"]
    },
    "lib": ["esnext"]
  },
  "include": ["src"]
}
