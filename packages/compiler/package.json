{
  "name": "@gaudi/compiler",
  "version": "0.0.3",
  "description": "Gaudi compiler",
  "author": "@gaudi.tech",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist",
  "bin": {
    "gaudi-compiler": "./dist/compiler-cli.js"
  },
  "scripts": {
    "// --- build": "",
    "build": "npm run build:ts",
    "build:ts": "tspc --build --preserveWatchOutput tsconfig.build.json",
    "// --- dev": "",
    "dev": "concurrently --names TS --prefix-colors blue \"npm run dev:ts\"",
    "dev:ts": "npm run build:ts -- --watch --incremental",
    "// --- test": "",
    "test": "jest --selectProjects unit",
    "test:watch": "npm test -- --watch",
    "// --- other": "",
    "clean": "rimraf ./dist",
    "// --- lifecycle": "",
    "prepack": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/gaudiorg/gaudi.git"
  },
  "bugs": {
    "url": "https://gitlab.com/gaudiorg/gaudi/issues"
  },
  "homepage": "https://gitlab.com/gaudiorg/gaudi#readme",
  "files": [
    "dist",
    "!*.tsbuildinfo",
    "!*.d.ts.map"
  ],
  "devDependencies": {
    "@types/common-tags": "^1.8.1",
    "@types/copyfiles": "^2.4.1",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.192",
    "@types/node": ">=18.0.0",
    "@types/sinonjs__fake-timers": "^8.1.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.4",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "openapi-types": "^12.1.0",
    "prettier": "^2.8.7",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@sinonjs/fake-timers": "^10.0.2",
    "chalk": "^4.1.2",
    "chevrotain": "^10.5.0",
    "chokidar": "^3.5.3",
    "common-tags": "^1.8.2",
    "cosmiconfig": "^8.2.0",
    "dotenv": "^16.0.3",
    "fast-glob": "^3.2.12",
    "lodash": "^4.17.21",
    "ts-morph": "^18.0.0",
    "ts-pattern": "^4.2.2",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8",
    "vscode-uri": "^3.0.7",
    "winston": "^3.8.2"
  }
}
