{
  "name": "@gaudi/runtime",
  "version": "0.0.1",
  "description": "Gaudi runtime",
  "main": "index.js",
  "types": ".",
  "scripts": {
    "// --- build": "",
    "build": "npm run build:ts; npm run build:copy-static;",
    "build:ts": "tsc --build --preserveWatchOutput",
    "build:copy-static": "copyfiles -f -V ./package.json dist",
    "// --- dev": "",
    "dev": "concurrently --names TS,COPY --prefix-colors magenta,blue \"npm run dev:ts\" \"npm run dev:copy-static\"",
    "dev:ts": "npm run build:ts -- --watch --incremental",
    "dev:copy-static": "chokidar ./package.json --debounce 100 --initial --command \"npm run build:copy-static\"",
    "// --- other": "",
    "clean": "rimraf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/gaudiorg/gaudi.git"
  },
  "author": "@gaudi.tech",
  "license": "UNLICENCED",
  "bugs": {
    "url": "https://gitlab.com/gaudiorg/gaudi/issues"
  },
  "homepage": "https://gitlab.com/gaudiorg/gaudi#readme",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.192",
    "@types/module-alias": "^2.0.1",
    "@types/node": ">=18.0.0",
    "@types/passport": "^1.0.12",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.4",
    "eslint-plugin-import": "^2.27.5",
    "openapi-types": "^12.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@gaudi/compiler": "^0.0.1",
    "bcrypt": "^5.1.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "knex": "^2.3.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.8.0",
    "prisma": "^4.4.0",
    "sql-formatter": "^12.0.4",
    "swagger-ui-express": "^4.5.0",
    "ts-pattern": "^4.2.2",
    "yup": "^0.32.11"
  }
}
