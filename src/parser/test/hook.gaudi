
model User {
  field fieldOne {
    type text
    validate {
      hook {
        default arg fieldOne
        runtime MyRuntime
        source foo from "customHooks"
      }
    }
  }
  field fieldTwo {
    type text
    validate {
      hook {
        default arg fieldTwo
        inline `
          return fieldTwo.toLowerCase() === "something";
        `
      }
    }
  }
}

entrypoint UserEntry {
  target model User
  create endpoint {
    action {
      create {
        set fieldOne hook {
          arg second fieldTwo
          source foo from "customHooks"
        }
      }
    }
  }

  custom endpoint {
    path "somePath"
    method POST
    cardinality one

    action {
      execute {
        responds
        hook {
          arg name name
          runtime MyRuntime
          source foo from "customHooks"
        }
      }
    }
  }
}
