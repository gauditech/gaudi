{
  "name": "@gaudi/runtime",
  "version": "0.0.1",
  "description": "Gaudi runtime",
  "main": "./dist/index.js",
  "types": "./dist",
  "bin": {
    "gaudi-runtime": "./dist/index.js",
    "gaudi-populator": "./dist/populator/populator.js"
  },
  "scripts": {
    "// --- build": "",
    "build": "npm run build:ts",
    "build:ts": "tspc --build --preserveWatchOutput",
    "// --- dev": "",
    "dev": "concurrently --names TS --prefix-colors blue \"npm run dev:ts\"",
    "dev:ts": "npm run build:ts -- --watch --incremental",
    "// --- test": "",
    "test": "jest --selectProjects unit",
    "test:watch": "npm test -- --watch",
    "test:api": "jest --selectProjects api",
    "test:api:watch": "npm run test:api -- --watch",
    "test:client": "jest --selectProjects client",
    "test:client:watch": "npm run test:client -- --watch",
    "// --- other": "",
    "clean": "rimraf ./dist",
    "gaudi-populator": "gaudi-populator"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/gaudiorg/gaudi.git"
  },
  "author": "@gaudi.tech",
  "license": "UNLICENCED",
  "bugs": {
    "url": "https://gitlab.com/gaudiorg/gaudi/issues"
  },
  "homepage": "https://gitlab.com/gaudiorg/gaudi#readme",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.192",
    "@types/node": ">=18.0.0",
    "@types/passport": "^1.0.12",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.4",
    "eslint-plugin-import": "^2.27.5",
    "openapi-types": "^12.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@gaudi/compiler": "^0.0.1",
    "bcrypt": "^5.1.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "knex": "^2.3.0",
    "lodash": "^4.17.21",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.8.0",
    "prisma": "^4.4.0",
    "sql-formatter": "^12.0.4",
    "swagger-ui-express": "^4.5.0",
    "ts-pattern": "^4.2.2"
  }
}
