    "@types/lodash": "^4.14.192",
    "@types/module-alias": "^2.0.1",
    "@types/node": ">=18.0.0",
    "@types/passport": "^1.0.12",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/sinonjs__fake-timers": "^8.1.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
