{
  "name": "@gaudi/engine",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "// --- build": "",
    "build": "npm run build:grammar; npm run build:ts; npm run build:copy-static;",
    "build:grammar": "ohm generateBundles --withTypes ./src/parser/grammar/gaudi.ohm",
    "build:ts": "tsc --project ./tsconfig.json --preserveWatchOutput",
    "build:copy-static": "copyfiles -f ./src/package.json dist",
    "// --- dev": "",
    "dev": "concurrently --names GRAM,TS,STAT --prefix-colors magenta,blue,yellow \"npm run dev:grammar\" \"npm run dev:ts\" \"npm run dev:copy-static\"",
    "dev:grammar": "chokidar ./src/parser/grammar/gaudi.ohm --debounce 100 --command \"npm run build:grammar\"",
    "dev:ts": "npm run build:ts -- --watch --incremental",
    "dev:copy-static": "chokidar ./src/package.json  --debounce 100 --command \"npm run build:copy-static\"",
    "// --- test": "",
    "test": "npm run build:grammar && jest --testPathIgnorePatterns='<rootDir>/src/e2e/'",
    "test:watch": "npm test -- --watch",
    "test:api": "dotenv -e ./src/e2e/api/test.env -- jest ./src/e2e/api",
    "test:api:watch": "npm run test:api -- --watch",
    "// --- other": "",
    "clean": "rimraf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/gaudiorg/gaudi.git"
  },
  "author": "Marin Pranjic, Ivo Kosir, Hrvoje Kasabasic",
  "license": "UNLICENCED",
  "bugs": {
    "url": "https://gitlab.com/gaudiorg/gaudi/issues"
  },
  "homepage": "https://gitlab.com/gaudiorg/gaudi#readme",
  "devDependencies": {
    "@ohm-js/cli": "^1.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/common-tags": "^1.8.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.1",
    "@types/lodash": "^4.14.186",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.7.17",
    "@types/passport": "^1.0.11",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.4.0",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.0.3",
    "make-dir-cli": "^3.0.0",
    "openapi-types": "^12.0.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "common-tags": "^1.8.2",
    "express": "^4.18.2",
    "knex": "^2.3.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "ohm-js": "^16.4.0",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.8.0",
    "prisma": "^4.4.0",
    "swagger-ui-express": "^4.5.0",
    "yargs": "^17.6.2",
    "yup": "^0.32.11"
  }
}
