auth {
  method basic {}
}

model Operator {
  field name { type string }
  relation boxes { from Box, through owner }
}

model Box {
  field name { type string, unique }
  field is_public { type boolean }
  reference owner { to Operator, nullable }
  relation items { from Item, through box }
}

model Item {
  field name { type string }
  field is_public { type boolean }
  reference box { to Box }
}

entrypoint Boxes {
  target Box as box
  identify with name

  list endpoint {
    // user must be logged in
    authorize { @auth.id is not null }
  }
  get endpoint {
    authorize { box.is_public or @auth.id is box.owner.id }
  }
  create endpoint {
    authorize { @auth.id is not null }
    action {
      create {
        set owner_id @auth.id
      }
    }
  }

  entrypoint Items {
    target items as item
    identify with name

    authorize { box.is_public or @auth.id is box.owner.id }

    get endpoint {
      authorize { item.is_public }
    }
  }
}
