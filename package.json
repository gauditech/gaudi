{
  "name": "@gaudi/engine",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "// --- build": "",
    "build": "npm run build:ts; npm run build:copy-static;",
    "build:ts": "tsc --project ./tsconfig.json --preserveWatchOutput",
    "build:copy-static": "copyfiles -f -V ./src/package.json dist && copyfiles -V -a './template-create-gaudi/**' dist",
    "// --- dev": "",
    "dev": "concurrently --names TS,COPY --prefix-colors magenta,blue \"npm run dev:ts\" \"npm run dev:copy-static\"",
    "dev:ts": "npm run build:ts -- --watch --incremental",
    "dev:copy-static": "chokidar ./src/package.json ./template-create-gaudi --debounce 100 --initial --command \"npm run build:copy-static\"",
    "// --- test": "",
    "test": "jest --selectProjects unit",
    "test:watch": "npm test -- --watch",
    "test:api": "jest --selectProjects api",
    "test:api:watch": "npm run test:api -- --watch",
    "test:client": "jest --selectProjects client",
    "test:client:watch": "npm run test:client -- --watch",
    "// --- other": "",
    "clean": "rimraf ./dist",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/gaudiorg/gaudi.git"
  },
  "author": "Marin Pranjic, Ivo Kosir, Hrvoje Kasabasic",
  "license": "UNLICENCED",
  "bugs": {
    "url": "https://gitlab.com/gaudiorg/gaudi/issues"
  },
  "homepage": "https://gitlab.com/gaudiorg/gaudi#readme",
  "devDependencies": {
