{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "lib": ["es2020"]
  },
  "include": ["src"]
}
