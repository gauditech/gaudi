model User {
  field fieldOne {
    type text
    validate {
      hook {
        default arg fieldOne
        runtime MyRuntime
        source foo from "customValidateHook"
      }
    }
  }
  field fieldTwo {
    type text
    validate {
      hook {
        default arg fieldTwo
        inline `
          return fieldTwo.toLowerCase() === "something";
        `
      }
    }
  }
}

entrypoint UserEntry {
  target model User
  create endpoint {
    action {
      create {
        set fieldOne hook {
          arg second fieldTwo
          source foo from "customHook"
        }
      }
    }
  }
}
