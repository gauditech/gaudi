entrypoint ItemEntry {
  target model Item as item
  identify with slug
  response { name, price, brand { name } }
  list endpoint {}
  get endpoint {}
  update endpoint {}
  create endpoint {
    action {

      create {
        reference plan through name
      }
      create item {}
      create Item as item {}
      delete item {
        delete item.parent {}
        update item.parent {}
      }
      update item.bar.baz {
        set bar item.bar.baz.x.y
        set foo 10
        set baz null
        set bar c * (a - b)
        deny *
        deny { foo, bar }
        input { z, x { optional, default 10 }, y, foo { default item.bar.id } }
      }
    }
  }
  custom endpoint {
    cardinality one
    method PATCH
    path "customPath"

    action {
      update {}
    }
  }

  entrypoint Review {
    target relation reviews
    create endpoint {}
  }
}
