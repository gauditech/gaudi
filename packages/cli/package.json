{
  "name": "gaudi",
  "version": "0.0.3",
  "description": "Gaudi CLI",
  "author": "@gaudi.tech",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist",
  "bin": {
    "gaudi": "./dist/gaudi-cli.js"
  },
  "scripts": {
    "// --- build": "",
    "build": "npm run build:ts",
    "build:ts": "tspc --build --preserveWatchOutput tsconfig.build.json",
    "// --- dev": "",
    "dev": "concurrently --names TS --prefix-colors blue \"npm run dev:ts\"",
    "dev:ts": "npm run build:ts -- --watch --incremental",
    "// --- other": "",
    "clean": "rimraf ./dist",
    "// --- lifecycle": "",
    "prepack": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gauditech/gaudi.git"
  },
  "bugs": {
    "url": "https://github.com/gauditech/gaudi/issues"
  },
  "homepage": "https://github.com/gauditech/gaudi#readme",
  "files": [
    "dist",
    "!*.tsbuildinfo",
    "!*.d.ts.map"
  ],
  "devDependencies": {
    "@types/lodash": "^4.14.192",
    "@types/node": ">=18.0.0",
    "@types/nodemon": "^1.19.2",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "concurrently": "^7.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.4",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.7",
    "rimraf": "^3.0.2",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@gaudi/compiler": "0.0.3",
    "@gaudi/runtime": "0.0.3",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.3",
    "lodash": "^4.17.21",
    "nodemon": "^3.0.1",
    "pkg-dir": "^5.0.0",
    "ts-pattern": "^4.2.2",
    "yargs": "^17.7.1"
  }
}
