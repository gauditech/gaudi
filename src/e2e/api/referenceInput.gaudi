model Element {
  field name { type string }
  reference extra { to Extra } // TODO: unique?
}

model Extra {
  field slug { type string, unique }
  relation element { from Element, through extra }
}

api {
  entrypoint Extra {
    create endpoint {}
  }

  entrypoint Element {
    create endpoint {
      action {
        create {
          reference extra through slug
        }
      }
    }
  }
}
