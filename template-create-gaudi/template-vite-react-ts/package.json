{
  "name": "gaudi-demo",
  "version": "1.0.0",
  "description": "Demo project of Gaudi server and Vite+React+TS client",
  "scripts": {
    "// --- build": "",
    "build": "npm run build:server:hooks && npm run build:server:api && npm run build:client",
    "build:server:api": "npx gaudi-cli build app/server",
    "build:server:hooks": "tsc --preserveWatchOutput --project app/server",
    "build:client": "vite build app/client",
    "// --- dev": "",
    "dev": "concurrently --names hooks,gaudi,client \"npm run dev:server:hooks\" \"npm run dev:server:api\" \"npm run dev:client\" ",
    "dev:server:api": "npx gaudi-cli dev app/server",
    "dev:server:hooks": "npm run build:server:hooks -- --watch --incremental",
    "dev:client": "vite dev app/client",
    "// --- lint": "",
    "lint": "npm run lint:client; npm run lint:server",
    "lint:client": "eslint app/client",
    "lint:server": "eslint app/server",
    "// --- test": "",
    "test": "npm run test:server; npm run test:client",
    "test:server": "jest --config=./app/server/jest.config.js",
    "test:client": "jest --config=./app/client/jest.config.js",
    "// --- start": "",
    "start": "npx gaudi-cli start",
    "// --- other": "",
    "clean": "rimraf ./dist"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^4.8.3",
    "vite": "^4.3.9"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
